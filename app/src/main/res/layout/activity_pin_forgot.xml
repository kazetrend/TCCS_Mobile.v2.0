<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/kai">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp">

        <TextView
            android:text="PLEASE LOGIN WITH COMPANY EMAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:id="@+id/banner"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:id="@+id/emailinput"
            android:hint="Email Address"
            android:textSize="14sp"
            android:textAlignment="textStart" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/defaultpin"
            android:hint="Default Pin"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <Button
            android:text="Set Up New Pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setPin"
            android:layout_marginBottom="0dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Request Change Pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_alignTop="@+id/setPin"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

    </LinearLayout>


</RelativeLayout>